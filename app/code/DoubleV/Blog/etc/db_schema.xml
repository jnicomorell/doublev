<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="doublev_blog_post" resource="default" engine="innodb" comment="Blog Posts Table">
        <column xsi:type="int" name="post_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Post ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Post Title"/>
        <column xsi:type="text" name="content" nullable="false" comment="Post Content"/>
        <column xsi:type="varchar" name="author" nullable="false" length="255" comment="Post Author"/>
        <column xsi:type="boolean" name="is_active" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
        <index referenceId="DOUBLEV_BLOG_POST_TITLE" indexType="btree">
            <column name="title"/>
        </index>
        <index referenceId="DOUBLEV_BLOG_POST_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>
    
    <table name="doublev_blog_comment" resource="default" engine="innodb" comment="Blog Comments Table">
        <column xsi:type="int" name="comment_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Comment ID"/>
        <column xsi:type="int" name="post_id" padding="10" unsigned="true" nullable="false" comment="Post ID"/>
        <column xsi:type="varchar" name="author" nullable="false" length="255" comment="Comment Author"/>
        <column xsi:type="text" name="content" nullable="false" comment="Comment Content"/>
        <column xsi:type="varchar" name="email" nullable="false" length="255" comment="Author Email"/>
        <column xsi:type="boolean" name="is_active" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="comment_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="DOUBLEV_BLOG_COMMENT_POST_ID_DOUBLEV_BLOG_POST_POST_ID" 
                   table="doublev_blog_comment" column="post_id" referenceTable="doublev_blog_post" referenceColumn="post_id" onDelete="CASCADE"/>
        <index referenceId="DOUBLEV_BLOG_COMMENT_POST_ID" indexType="btree">
            <column name="post_id"/>
        </index>
        <index referenceId="DOUBLEV_BLOG_COMMENT_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>
</schema>
